@{
    ViewData["Title"] = "Create Event";
}

@model CircuitClient.Models.CalendarEvent

<h4>Add a new Event</h4>

@using (Html.BeginForm())
{
    @Html.LabelFor(model => model.Name)
    <br>
    @Html.TextBoxFor(model => model.Name, new {style="width:75%"})
    <br>
    @Html.LabelFor(model => model.Description)
    <br>
    @Html.TextAreaFor(model => model.Description, new { style = "width: 75%; height: 100px; word-wrap: break-word; overflow-y: scroll;" })

    @* @Html.TextBoxFor(model => model.Description, new {style= "width: 75%; height: 100px; word-wrap: break-word; overflow-y: scroll;" }) *@
    <br>
    <p>
    <input type="submit" value="Add Event" class="btn btn-primary" />
</p>
}

<br>
<p>@Html.ActionLink("Back to all events", "Index")</p>

 