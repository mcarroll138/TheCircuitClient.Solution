@{
    ViewData["Title"] = $"Edit {Model.Name}";
}

@model CircuitClient.Models.CalendarEvent

<h4>Edit @Model.Name</h4>

@using (Html.BeginForm())
{
    @Html.HiddenFor(model => model.CalendarEventId)
    @Html.LabelFor(model => model.Name)
    <br>
    @Html.TextBoxFor(model => model.Name, new { @Value = Model.Name, style= "width:75%; height:"})
    <br>
    @Html.LabelFor(model => model.Description)
    <br>
    @Html.TextBoxFor(model => model.Description, new { @Value = Model.Description, style= "width:75%; height:"})
    <br>


    <input type="submit" value="Edit Event" class="btn btn-primary" />
}

<br>
<p>@Html.ActionLink("Back to details", "Details", new {id = @Model.CalendarEventId})</p>